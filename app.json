{
  "name": "syracuse_biz_portal",
  "description": "",
  "scripts": {
    "postdeploy": "python ./manage.py migrate --no-input"
  },
  "env": {
    "DJANGO_SECRET_KEY": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    }
  },
  "formation": {
    "release": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "bucketeer",
    "papertrail",
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
